<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/design_default_color_primary"
            app:itemIconTint="@android:color/background_light"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/bottom_nav_menu" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="450dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="200dp"
            android:cropToPadding="false"
            android:scaleType="center"
            app:srcCompat="@drawable/logomain" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="272dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="298dp"
            android:gravity="center"
            android:text="Chalet PAPEETE, your lovely bathouse." />

        <Button
            android:id="@+id/login"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/aggiungi_utente_post"
            android:layout_alignParentStart="true"
            android:layout_marginStart="92dp"
            android:layout_marginBottom="14dp"
            android:text="Login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aggiungi_utente_post" />

        <Button
            android:id="@+id/aggiungi_utente_post"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_navigation"
            android:layout_alignParentStart="true"
            android:layout_marginStart="92dp"
            android:layout_marginBottom="75dp"
            android:allowUndo="false"
            android:autoLink="none"
            android:text="Registrati" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>